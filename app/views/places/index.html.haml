.nav_wrapper
  .nav_inner
    .page_icon
      %i.icon-gift
      Места
    %ul.navigation.navbar
      %li.divider-vertical
      %li
        %a.btn.btn-primary{href: new_place_path}
          %i.icon-plus
          Добавить
      %li.divider-vertical
      %li
        %a.btn.btn-success{href: goods_path}
          %i.icon-globe
          Товары

.content
  %ul.places_list
    - @places.each do |place|
      %li.places_list_item
        .item_toolbar
          = link_to 'Просмотр', place, class: "btn"
          = link_to 'Редактировать', edit_place_path(place), class: "btn btn-success"
        %div
          = render place
