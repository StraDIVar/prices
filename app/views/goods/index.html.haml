.nav_wrapper
  .nav_inner
    .page_icon
      %i.icon-gift
      Товары
    %ul.navigation.navbar
      %li.divider-vertical
      %li
        %a.button.button_success{href: new_good_path}
          %i.icon-plus
          Добавить
      %li.divider-vertical
      %li
        %a.button{href: places_path}
          %i.icon-globe
          Места

.content
  %ul.goods_list
    - @goods.each do |good|
      %li.goods_list_item
        .item_toolbar
          = link_to 'Просмотр', good, class: "button button_small"
          = link_to 'Редактировать', edit_good_path(good), class: "button button_success button_small"
        %div
          = render good

