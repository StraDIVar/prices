.nav_wrapper
  .nav_inner
    .page_icon
      %i.icon-gift
      Товары
    %ul.navigation.navbar
      %li.divider_vertical
      %li
        %a.button.button_success{href: new_good_path}
          %i.icon-plus
          Добавить
      %li.divider_vertical
      %li
        %a.button{href: places_path}
          %i.icon-globe
          Места
