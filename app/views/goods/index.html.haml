        = form_tag search_goods_path, method: :get, remote: true do
          = text_field_tag :search, params[:search], class: "search_field"
          = submit_tag "Искать", name: nil, class: "button"

.content
  %ul.goods_list
    = render 'goods', locals: {goods: @goods}
