.well
  .control-group.input-prepend
    %i.add-on.icon-gift
    %span.good_name.input-xlarge.uneditable-input= @good.name

  .control-group.input-prepend
    %i.add-on.icon-globe
    %span.place_name.input-xlarge.uneditable-input= @good.place.name

  .control-group.input-prepend.input-append
    %i.add-on.icon-circle-arrow-right
    %span.price.input-medium.uneditable-input= @good.price
    %i.add-on= "руб."

  .control-group.input-prepend
    %i.add-on.icon-book
    %div.notes.input-xlarge.uneditable-input.uneditable-textarea
      = @good.notes
