= form_for @good do |f|
  - if @good.errors.any?
    #error_explanation
      %h2= "#{pluralize(@good.errors.count, "error")} prohibited this good from being saved:"
      %ul
        - @good.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :notes
    = f.text_area :notes
  .field
    = f.label :price
    = f.number_field :price, min: 1, max: 1_000_000_000
  .actions
    = f.submit 'Save'
