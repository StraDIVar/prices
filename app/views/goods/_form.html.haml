.form_wrapper.form_good
  = form_for @good do |f|
    .control_container
      = f.label :name, "Товар:"
      = f.text_field :name, placeholder: "Введите название товара..."

    .control_container
      = f.label :place_name, "Место:"
      = f.text_field :place_name, placeholder: "Введите место, где продается товар...",
                     data: {autocomplete_source: places_path}

    .control_container
      = f.label :price, "Цена:"
      = f.number_field :price, placeholder: "Введите цену в рублях...",
                       min: 1, max: 1_000_000_000

    .control_container
      = f.label :notes, "Дополнительно:"
      = f.text_area :notes, placeholder: "Здесь можно ввести дополнительную информацию о товаре",
                    rows: 3, cols: nil

    .actions
      = f.submit "Сохранить", class: "decor_button--large"
